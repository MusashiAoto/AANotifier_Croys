<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_notification_access"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/open_notification_access" />

    <Switch
        android:id="@+id/switch_disable_ongoing_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="?attr/listPreferredItemPaddingLeft"
        android:paddingEnd="?attr/listPreferredItemPaddingRight"
        android:text="@string/disable_ongoing_notification" />

    <Switch
        android:id="@+id/switch_display_spurious_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="?attr/listPreferredItemPaddingLeft"
        android:paddingEnd="?attr/listPreferredItemPaddingRight"
        android:text="@string/display_spurious_notifications_of_this_app" />

</LinearLayout>